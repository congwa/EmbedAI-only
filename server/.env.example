# EmbedAI RAG推荐系统配置示例

# 基础设置
DEBUG=true
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-super-secret-key-here

# CORS设置
ALLOWED_ORIGINS=["http://localhost:3000","https://localhost:3000","http://127.0.0.1:3000"]

# 工作目录
WORK_DIR=./data

# SiliconFlow API设置
SILICONFLOW_API_KEY=your-siliconflow-api-key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# LightRAG设置
LIGHTRAG_LLM_PROVIDER=siliconflow
LIGHTRAG_LLM_NAME=Qwen/Qwen2.5-72B-Instruct
LIGHTRAG_EMBEDDING_MODEL=BAAI/bge-m3
LIGHTRAG_RERANKER_MODEL=BAAI/bge-reranker-large

# OpenAI兼容设置（用于LightRAG）
OPENAI_API_KEY=${SILICONFLOW_API_KEY}
OPENAI_BASE_URL=${SILICONFLOW_BASE_URL}

# Milvus设置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_DB_NAME=embedai

# Neo4j设置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# MinIO设置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=embedai

# 限流设置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# 推荐设置
DEFAULT_TOP_K=10
MAX_TOP_K=50
MAX_HISTORY_LENGTH=20

# 安全设置
DOMAIN_WHITELIST=["localhost","127.0.0.1","*.yourdomain.com"]
